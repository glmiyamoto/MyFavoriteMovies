<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.glmiyamoto.myfavoritemovies.views.fragments.MovieFragment">

    <ScrollView
        android:layout_margin="@dimen/main_layout_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Poster -->
            <ImageView
                android:id="@+id/image_view_poster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"/>

            <!-- Writer -->
            <LinearLayout
                style="@style/MyFavoriteMovies.Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/MyFavoriteMovies.ItemTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_writer" />

                <TextView
                    style="@style/MyFavoriteMovies.ItemText"
                    android:id="@+id/text_view_writer"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- Director -->
            <LinearLayout
                style="@style/MyFavoriteMovies.Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/MyFavoriteMovies.ItemTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_director" />

                <TextView
                    style="@style/MyFavoriteMovies.ItemText"
                    android:id="@+id/text_view_director"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- Actors -->
            <LinearLayout
                style="@style/MyFavoriteMovies.Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/MyFavoriteMovies.ItemTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_actors"/>

                <TextView
                    style="@style/MyFavoriteMovies.ItemText"
                    android:id="@+id/text_view_actors"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- Language -->
            <LinearLayout
                style="@style/MyFavoriteMovies.Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/MyFavoriteMovies.ItemTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_language"/>

                <TextView
                    style="@style/MyFavoriteMovies.ItemText"
                    android:id="@+id/text_view_language"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- Country -->
            <LinearLayout
                style="@style/MyFavoriteMovies.Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/MyFavoriteMovies.ItemTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_country" />

                <TextView
                    style="@style/MyFavoriteMovies.ItemText"
                    android:id="@+id/text_view_country"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- Genre -->
            <LinearLayout
                style="@style/MyFavoriteMovies.Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/MyFavoriteMovies.ItemTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_genre" />

                <TextView
                    style="@style/MyFavoriteMovies.ItemText"
                    android:id="@+id/text_view_genre"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- Awards -->
            <LinearLayout
                style="@style/MyFavoriteMovies.Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/MyFavoriteMovies.ItemTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_awards" />

                <TextView
                    style="@style/MyFavoriteMovies.ItemText"
                    android:id="@+id/text_view_awards"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- Plot -->
            <TextView
                android:id="@+id/text_view_plot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
